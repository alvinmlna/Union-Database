@model IEnumerable<UnionDatabaseV1.DAL.FileManager>

@{
    ViewBag.Title = "Index";
}

<div class="section-title mt-20">
    <h5>Data Organisasi</h5>
</div>

<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            File
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.Path) == false)
                {
                    @Html.ActionLink("Download File", "Download", new { id = item.Id })
                }
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>
