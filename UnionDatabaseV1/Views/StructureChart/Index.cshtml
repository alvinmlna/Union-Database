<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/sankey.js"></script>
<script src="https://code.highcharts.com/modules/organization.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>
<style>
    h1,
    h2,
    h3,
    h4,
    h5,
    h6, p {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        color: #ebebeb;
        margin: 0px;
    }

    .highcharts-figure,
    .highcharts-data-table table {
        min-width: 360px;
        margin: 1em auto;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #ebebeb;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td,
    .highcharts-data-table th,
    .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr,
    .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }

    #container h4 {
        text-transform: none;
        font-size: 14px;
        font-weight: normal;
    }

    #container p {
        font-size: 13px;
        line-height: 16px;
    }

    @@media screen and (max-width: 600px) {
        #container h4 {
            font-size: 2.3vw;
            line-height: 3vw;
        }

        #container p {
            font-size: 2.3vw;
            line-height: 3vw;
        }
    }
</style>

@using (Html.BeginForm("Chart", "StructureChart", FormMethod.Post, new { @name = "Form1" }))
{
    <div class="col-md-3 mb-10">
        @Html.DropDownList("PUK", new SelectList(Model, "Id", "PUK1"), "Please select", new { @id = "ddlPUK", @class = "form-control" })
    </div>

    @Html.Hidden("areaId", null, new { @id = "pukName" })
}


@{
    ViewBag.removeContainer = true;
}

<div style="display:flex;justify-content:center;">
    <figure class="highcharts-figure">
        <div id="container"></div>
    </figure>
</div>


@section scripts {
    <script>
        $("body").on("change", "#ddlPUK", function () {
            var value = $(this).find("option:selected").val();
            $("#pukName").val(value);
            document.forms["Form1"].submit();
        });

    // A $( document ).ready() block.
        $(document).ready(function () {
            $.ajax({
            url: '@Url.Action("ShowChart", "StructureChart")',
            cache: false,
            data: { areaid : @ViewBag.areaId },
            type: "GET",
                success: function (result) {
                    showChart(result);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("Status: " + textStatus); alert("Error: " + errorThrown);
                }
        });
    });


    function showChart(nodevalues) {
        Highcharts.chart('container', {
            chart: {
                height: 400,
                width: 1400,
                inverted: true
            },

            title: {
                text: '@ViewBag.Name'
            },

            accessibility: {
                point: {
                    descriptionFormatter: function (point) {
                        var nodeName = point.toNode.name,
                            nodeId = point.toNode.id,
                            nodeDesc = nodeName === nodeId ? nodeName : nodeName + ', ' + nodeId,
                            parentDesc = point.fromNode.id;
                        return point.index + '. ' + nodeDesc + ', reports to ' + parentDesc + '.';
                    }
                }
            },

            series: [{
                type: 'organization',
                keys: ['from', 'to'],
                data: [
                    ['Ketua', 'Lainnya'],
                    ['Ketua', 'Sekertaris'],
                    ['Ketua', 'Bendahara'],
                    ['Lainnya', 'Waka1'],
                    ['Lainnya', 'Waka2'],
                    ['Lainnya', 'Waka3'],
                    ['Lainnya', 'Waka4'],
                    ['Lainnya', 'Waka5'],
                    ['Lainnya', 'Waka6'],
                    ['Waka1', 'Wasek1'],
                    ['Waka2', 'Wasek2'],
                    ['Waka3', 'Wasek3'],
                    ['Waka4', 'Wasek4'],
                    ['Waka5', 'Wasek5'],
                    ['Waka6', 'Wasek6']
                ],
                levels: [
                {
                    level: 0,
                    color: '#f05128',
                    height: 25
                    },
                    {
                        level: 1,
                        color: '#f05128',
                        height: 25
                    }, {
                    level: 2,
                    color: '#f05128'
                }, {
                    level: 3,
                    color: '#f05128'
                }],
                nodes: nodevalues,
                colorByPoint: false,
                color: '#007ad0',
                dataLabels: {
                    color: 'white'
                },
                borderColor: 'white',
                nodeWidth: 65
            }],
            tooltip: {
                outside: true
            },
            exporting: {
                allowHTML: true,
                sourceWidth: 1400,
                sourceHeight: 400
            }
        });
    }



    </script>
}